        }

        function Detalle_Valor_de_VariablerowCreationGrid(row, data, index) {
            var permission =  {            
                 Edit: '@permissionDetalle_Valor_de_Variable.Edit' == 'True',
                 Delete: '@permissionDetalle_Valor_de_Variable.Delete' == 'True'
            };
            setDetalle_Valor_de_VariableValidation();
            var Detalle_Valor_de_VariableRowElement = "Detalle_Valor_de_Variable_" + index.toString();
            $(row).addClass(Detalle_Valor_de_VariableRowElement);
            var nameOfTable='Detalle_Valor_de_Variable_';
            var rowIndex = '_' + index;
            Detalle_Valor_de_VariableinsertRowCurrentIndex = index;

            row.innerHTML = "";

            if (data.IsInsertRow) {

                if (row.childNodes.length != 0) {
                    for (var i = 0; i < row.childNodes.length; i++) {
                        row.childNodes[i].remove();
                    }
