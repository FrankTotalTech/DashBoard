        function Detalle_Valor_de_VariableGetUpdateRowControls(data, nameOfTable, rowIndex) {

            var columnData = [];
            var counter = 0;
            var inputData = "<input type='text' class='fullWidth form-control' />";
            columnData[counter++] = $($($.parseHTML(inputData)).val(data.Valor)).addClass('Valor').attr('id', nameOfTable + 'Valor' + rowIndex).attr('data-field', 'Valor');
            columnData[counter++] = $($($.parseHTML(inputData)).val(data.Peso)).addClass('Peso inputNumber').attr('id', nameOfTable + 'Peso' + rowIndex).attr('data-field', 'Peso');

            return columnData;
        }



        function GetFileInfo(fileData, fileUploadData) {

            var $div = $("<div>");
            if (fileUploadData != null && fileUploadData.files.length > 0) {

                $div.append("<label>" + fileUploadData.files[0].name + "</label>");
                //<i class="fa fa-times-circle" id='removeFileAttachment'>
                $div.append($("<i class='fa fa-times-circle' id='removeFileAttachment'>").click(function () {
                    if (confirm(htmlDecode("@Resources.Resources.DeleteConfirm"))) {
                        var parent = $(this).parent().parent();
                        parent.empty();
                        parent.append("<input type='file'>");
                    }
                }));
                return $div;

            } else if (fileUploadData != null) {
                return $.parseHTML(GetFileUploader());
            } else {
                $div.append("<label>" + fileData.FileName + "</label>");
                $div.append($("<i class='fa fa-times-circle' id='removeFileAttachment'>").click(function () {
                    if (confirm(htmlDecode("@Resources.Resources.DeleteConfirm"))) {
                        var parent = $(this).parent().parent();
                        parent.empty();
                        parent.append("<input type='file'>");
                    }
                }));
                return $div;
            }
        }

        var removedDetalle_Valor_de_VariableData = [];
        function Detalle_Valor_de_VariableDeleteRow(rowIndex, row) {
            var rowIndexTable = Detalle_Valor_de_VariableTable.fnGetPosition($(row).parent().parent()[0]);
            var permission = {            
                 Delete: '@permissionDetalle_Valor_de_Variable.Delete' == 'True'
            };
            if (!permission.Delete || isConsultMode)
                return;            
            if (confirm(htmlDecode("@Resources.Resources.DeleteConfirm"))) {
              if (EjecutarValidacionesAlEliminarMRDetalle_Valor_de_Variable('Detalle_Valor_de_Variable_', '_' + rowIndex)) {
                var prevData = Detalle_Valor_de_VariableTable.fnGetData(rowIndexTable );
